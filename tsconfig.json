{
    "compilerOptions": {
      "target": "ES2022",
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "outDir": "dist",
      "rootDir": "src",             // ⬅️ important
      "declaration": true,
      "strict": true,
      "skipLibCheck": true,
      "esModuleInterop": true
    },
    "include": ["src"],             // ⬅️ compile seulement la lib
    "exclude": ["dist","node_modules","examples","tests"]
  }